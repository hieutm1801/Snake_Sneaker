<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_bg_dialog_country">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageView_close_dialog_country"
            android:text="@string/select_country"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textView_title_dialog_country" />

        <ImageView
            android:id="@+id/imageView_close_dialog_country"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_dialog_country">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_dialog_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="@string/search_country"
            android:theme="@style/editText_style"
            android:textColor="@color/textView_sub_address" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_dialog_country"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />

    </LinearLayout>


</LinearLayout>