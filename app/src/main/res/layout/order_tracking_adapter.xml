<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.vipulasri.timelineview.TimelineView
            android:id="@+id/timeline_orderTrack_adapter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:markerSize="15dp"
            app:lineWidth="3dp"
            app:markerInCenter="false"
            app:endLineColor="@color/green"
            app:lineStyle="normal" />

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
               android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textView_title_orderTrack_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="18sp"
                    android:textColor="@color/textView_order_tracking_Adapter"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textView_date_orderTrack_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:textColor="@color/textView_order_tracking_Adapter"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textView_des_orderTrack_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:textColor="@color/textView_sub_order_tracking_Adapter"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</RelativeLayout>