<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_country_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/app_name"
        android:textSize="16sp"
        android:textColor="@color/textView_country_adapter" />

    <View
        android:id="@+id/view_country_adapter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_country_adapter"
        android:layout_below="@+id/textView_country_adapter" />

</RelativeLayout>